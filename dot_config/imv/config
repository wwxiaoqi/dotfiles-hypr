[options]
# Suppress built-in key bindings, and specify them explicitly in this config file.
suppress_default_binds = true


[aliases]


[binds]
# Define some key bindings
q = quit
y = exec echo working!

# background color for transparent/black png
b = background checks

# background color to default black
<Shift+B> = background 000000

# Image navigation
<Left> = prev
<bracketleft> = prev
<Right> = next
<bracketright> = next
gg = goto 1
<Shift+G> = goto -1

p = prev
n = next

# Panning
j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0

# Zooming
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
o = zoom -1

# Rotate Clockwise by 90 degrees
r = rotate by 90
<Ctrl+r> = rotate by -90

# Other commands
<Shift+X> = close
d = overlay
I = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
zz = reset

f = flip horizontal
v = flip vertical

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
